<div class="newJob">
	<div class="panelHeading" >	
	<center><h2><b>Create New Job</b></h2></center>	  		
  	</div>
  	<div class="panelBody">	
  		<%= simple_form_for @job , html: { class: "form-horizontal"} do |form| %>
	  	<div class="form-group">
	  		<%= form.input :title, label: "Job title" %>
	  	</div>
	  	<div class="form-group">
	  		<%= form.input :company, label: "Your company" %>
	  	</div>
	  	<div class="form-group">
	 		<%= form.input :url, label: "Link to job" %>
	  	</div>
	  	<center>	
	  		<%= form.button :submit, label: "Post Job", class: "button"%>
	  	</center>	  	
	  	
		<% end %>
  	</div>
</div>
</br><p align="right"><%= link_to "BACK TO JOBS", root_path %></p>
